rules_version = '2';

// Firebase Storage Security Rules için Malzemecim
service firebase.storage {
  match /b/{bucket}/o {
    // Ürün resimleri - giriş yapmış tüm kullanıcılar yükleyebilir
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Profil resimleri
    match /users/{userId}/profile/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Raporlar ve dışa aktarılan dosyalar
    match /reports/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Yedekleme dosyaları (sadece admin)
    match /backups/{allPaths=**} {
      allow read, write: if request.auth != null;
    }
    
    // Genel görsel klasörü
    match /images/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Varsayılan: Giriş yapmış kullanıcılar okuyabilir
    match /{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if false;
    }
  }
}
