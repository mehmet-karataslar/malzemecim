rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper fonksiyonu - Kullanıcının admin olup olmadığını kontrol et
    function isAdmin() {
      return request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Helper fonksiyonu - Giriş yapmış kullanıcı mı
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Kullanıcılar - kendi bilgilerini yönetebilir + admin oluşturma izni
    // İşletme listesi için public read (randevu için)
    match /users/{userId} {
      // Herkes işletme bilgilerini okuyabilir (randevu için)
      allow read: if true;
      // Kendi bilgilerini güncelleyebilir
      allow write: if isSignedIn() && request.auth.uid == userId;
      // Yeni kullanıcı oluşturabilir (kayıt için)
      allow create: if true;
    }
    
    // Ürünler - herkese açık okuma (arama için), admin yazabilir
    match /products/{productId} {
      allow read: if true; // Public read for search
      allow write: if isAdmin();
    }
    
    // Envanter - admin tam yetki, çalışan sadece okuma
    match /inventory/{inventoryId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Veresiye - admin tam yetki, çalışan sadece okuma
    match /credit/{creditId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Raporlar - admin tam yetki, çalışan sadece okuma
    match /reports/{reportId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    // Notlar - giriş yapmış tüm kullanıcılar okuyabilir ve yazabilir
    // (İşletme içi notlar - herkes görebilir)
    match /notes/{noteId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && 
        (resource.data.createdBy == request.auth.uid || isAdmin());
    }
    
    // Satışlar - admin yazabilir, herkes okuyabilir
    match /sales/{saleId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }
    
    // Randevular - herkes oluşturabilir, işletmeler sadece kendi randevularını görebilir
    match /appointments/{appointmentId} {
      // Herkes randevu oluşturabilir (public)
      allow create: if true;
      
      // Randevu sahibi işletme okuyabilir ve güncelleyebilir
      allow read, update: if isSignedIn() && 
        resource.data.businessId == request.auth.uid;
      
      // Randevu sahibi işletme silebilir
      allow delete: if isSignedIn() && 
        resource.data.businessId == request.auth.uid;
    }
    
    // Varsayılan: Erişimi reddet
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
