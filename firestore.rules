rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Kullanıcılar - kendi bilgilerini yönetebilir + admin oluşturma izni
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow read: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      allow create: if request.auth != null;  // Kullanıcı oluşturma izni
      allow read: if request.auth != null && resource.data.email == request.auth.token.email;  // Email ile okuma
    }
    
    // Ürünler - admin tam yetki, çalışan sadece okuma
    match /products/{productId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Envanter - admin tam yetki, çalışan sadece okuma
    match /inventory/{inventoryId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Veresiye - admin tam yetki, çalışan sadece okuma
    match /credit/{creditId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Raporlar - admin tam yetki, çalışan sadece okuma
    match /reports/{reportId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Notlar - herkes kendi notlarını yönetebilir
    match /notes/{noteId} {
      allow read, write: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;
      allow create: if request.auth != null && 
        request.resource.data.createdBy == request.auth.uid;
    }
    
    // Varsayılan: Erişimi reddet
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
